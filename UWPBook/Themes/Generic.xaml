<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:p="using:UWPBook.P_ControlTemplate.CustomUI">

    <Style TargetType="p:PButton" xmlns:p="using:UWPBook.P_ControlTemplate.CustomUI">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="p:PButton">
                    <Border CornerRadius="6" 
                            Background="#337ab7" 
                            BorderBrush="#2e6da4" 
                            BorderThickness="1"
                            Padding="12,6"
                            Margin="1"
                            Width="150"
                            Height="55">
                        <ContentControl                                        
                                        FontSize="20" 
                                        FontWeight="Bold" 
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center" 
                                        Content="{TemplateBinding Button.Content}"/>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
